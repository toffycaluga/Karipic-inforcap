<div id="<%= dom_id photo %>" class="card text-center" >
  <%= image_tag photo.photo,class:"card-img-top" %>
  <div class="card-body">
    <p class="card-text">
      <span>
        <%= photo.caption  %>
      </span>
      <br>
      <small class="text-body-secondary">
        Creada <%= time_ago_in_words(photo.created_at) %> atr√°s.
      </small>
    </p>
    
    <% if controller_name == 'photos' && action_name != 'show' %>
      <p class="text-end">
        <%= link_to "Show this photo", photo ,class:"btn btn-primary"%>
      </p>
    <% end %>
    
   </div>
   <div class="card-footer text-start">
    <!-- Mostrar comentarios existentes -->
    <h3>Comentarios</h3>
    <% @photo.comments.each do |comment| %>
      <p><strong><%= comment.user.try(:name) %>:</strong> <%= comment.content %></p>
    <% end %>
      <!-- Formulario para agregar nuevos comentarios -->
    <%= render 'comment_form', commentable: @photo %>
   </div>
</div>
